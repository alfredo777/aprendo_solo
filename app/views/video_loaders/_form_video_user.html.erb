
<div class="row" style="padding-top:50px;">

	
	<div class="span16" style="padding-left:50px;">
	<div class="span3 grey" style="z-index:99">
<%= form_for(@video_loader=VideoLoader.new) do |f| %>
    
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 5  %>
  </div>
  <div class="field">
    <%= f.label :typeo %><br />
    <%= f.select :typeo, options_for_select([['Matemáticas', 'mathematics'],['Bilogía', 'Bilology'],['Física','Physical'], ['Química','Quimic'],['Lenguajes','Languajes'], ['Informática','Informatic'],['Manualidades','crafts'], ['Arte','art'],['Hogar','home'], ['Cocina','kitchen'],['Relacionado con animales','animals'], ['Agricultura','agriculture'], ['Tema de interés social','social']])  %>
  </div>
  <div class="field">
    <%= f.label :level %><br />
    <%= f.select :level, options_for_select([['Principiante', 'one'],['Intermedio', 'two'],['Avanzado','tree']]) %>
  </div>
     <%= f.label :agreagar_a_uno_de_mis_cursos %>
    <%= f.collection_select :course_id, current_user.courses.find(:all), :id, :title, :prompt => "Agregar un curso"%>
   <%= f.file_field :video_load %>
    <%= f.hidden_field :user_id, :value => current_user.id%>
  <div class="actions">
    <%= f.submit "Subir Video", :class=>"btn" %>
  </div>
<% end %>
 </div>
 
 </div>
 <div class="span8"> 
	 <%= render :partial => "video_loaders/index"%>
 </div>
</div>